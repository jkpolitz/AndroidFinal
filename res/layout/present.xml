<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg" >

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#103F7C"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/smallLogo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:contentDescription="TEMP"
            android:src="@drawable/small_logo" />

        <TextView
            android:id="@+id/presName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ededed"
            android:textSize="20sp"
            android:textStyle="italic" />
    </LinearLayout>

    <ImageView
        android:id="@+id/currSlideImg"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@id/topBar"
        android:layout_gravity="center"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/slideNumInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/currSlideImg"
        android:textSize="20dp"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/controls"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_below="@id/slideNumInfo"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/previous"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/prev" />

        <ImageButton
            android:id="@+id/next"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/next" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/options"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/controls"
        android:layout_alignParentBottom="true"
        android:background="#103F7C"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/resetPoll"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Reset Poll"
            android:textColor="#ff9f00" />

        <TextView
            android:id="@+id/endPres"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="End Presentation"
            android:textColor="#ff9f00" />
    </LinearLayout>

</RelativeLayout>